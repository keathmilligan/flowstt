{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "FlowSTT",
  "version": "0.1.0",
  "identifier": "io.flowstt",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "macOSPrivateApi": true,
    "windows": [
      {
        "label": "main",
        "title": "FlowSTT",
        "width": 600,
        "height": 300,
        "minWidth": 480,
        "minHeight": 240,
        "resizable": true,
        "decorations": false,
        "transparent": true,
        "shadow": true,
        "visible": false,
        "center": true
      }
    ],
    "security": {
      "csp": null,
      "assetProtocol": {
        "enable": true,
        "scope": ["**"]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "resources": {
      "icons/tray/*": "icons/tray/"
    },
    "windows": {
      "nsis": {
        "installerIcon": "icons/icon.ico",
        "headerImage": "icons/icon.ico",
        "installMode": "currentUser"
      }
    },
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "entitlements": "entitlements.plist",
      "minimumSystemVersion": "12.3",
      "infoPlist": "Info.plist"
    }
  }
}
